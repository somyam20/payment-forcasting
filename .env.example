# ===========================================
# LLM MODELS (LiteLLM)
# ===========================================
LLM_MODEL=gemini/gemini-2.5-flash-lite
EMBED_MODEL=gemini/text-embedding-004

# ===========================================
# GOOGLE / GEMINI API KEY
# (LiteLLM will read this automatically)
# ===========================================
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ===========================================
# AWS S3 CONFIG
# ===========================================
AWS_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
AWS_SECRET_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=ap-south-1
AWS_BUCKET=your-s3-bucket-name

# ===========================================
# DATA & FILE PROCESSING
# ===========================================
TEMP_DIR=data/temp
SMALL_FILE_ROWS=2000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# LSTM FORECASTING CONFIG
# (these override model_config.yaml if set)
# ===========================================
LSTM_WINDOW=10
LSTM_STEPS=30
LSTM_EPOCHS=10
LSTM_BATCH_SIZE=32
LSTM_UNITS1=64
LSTM_UNITS2=32

# ===========================================
# SECRET KEYS (FastAPI / JWT if needed)
# ===========================================
APP_SECRET_KEY=CHANGE_ME
